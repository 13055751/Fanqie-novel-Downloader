{
  "name": "fanqie-novel-downloader-gui",
  "version": "1.0.1",
  "description": "番茄小说下载器GUI版本 - 支持多平台的番茄小说下载工具，提供TXT/EPUB格式转换，GUI界面下载功能",
  "main": "src/main/main.js",
  "homepage": "https://github.com/POf-L/Fanqie-novel-Downloader",
  "author": {
    "name": "POf-L",
    "email": ""
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "electron src/main/main.js",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "build": "npm run build:python && npm run build:renderer && npm run build:main && electron-builder",
    "build:main": "webpack --config webpack.main.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:python": "cd src/python && pyinstaller main.py --noconsole --onefile --distpath ../../build/python",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest",
    "test:integration": "python -m unittest src/python/tests/test_api.py",
    "test:e2e": "playwright test tests/e2e",
    "lint": "eslint src --ext .js,.ts,.vue",
    "lint:fix": "eslint src --ext .js,.ts,.vue --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.54.1",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.50.0",
    "eslint-plugin-vue": "^9.17.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "playwright": "^1.54.1",
    "style-loader": "^3.3.3",
    "typescript": "^5.2.2",
    "vue-loader": "^17.3.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "electron-log": "^5.4.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.2.1",
    "element-plus": "^2.4.0",
    "vue": "^3.3.4",
    "vue-virtual-scroller": "^2.0.0-beta.8"
  },
  "build": {
    "appId": "com.example.fanqie-downloader",
    "productName": "番茄小说下载器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build/python",
        "to": "python"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "identity": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "POf-L",
      "repo": "Fanqie-novel-Downloader"
    }
  }
}
